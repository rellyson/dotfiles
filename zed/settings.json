{
  "ui_font_size": 18,
  "buffer_font_size": 16,
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "theme": {
    "mode": "system",
    "light": "Roxo Theme",
    "dark": "Roxo Theme"
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "enable_language_server": true,
  "show_inline_completions": true,
  "vim_mode": true,
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "features": {
    "copilot": false,
    "inline_completion_provider": "none"
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000
    }
  },
  "terminal": {
    "shell": "system",
    "program": "zsh",
    "working_directory": "current_project_directory",
    "copy_on_select": true,
    "font_family": "FiraCode Nerd Font Mono"
  },
  "languages": {
    "Go": {
      "language_servers": ["gopls"]
    },
    "JSON": {
      "language_servers": ["json-language-server"]
    },
    "Lua": {
      "language_servers": ["lua-language-server"]
    },
    "Python": {
      "language_servers": ["pyright"]
    },
    "Terraform": {
      "language_servers": ["terraform-ls"]
    },
    "TOML": {
      "language_servers": ["taplo"]
    },
    "YAML": {
      "language_servers": ["yaml-language-server"]
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": true
          },
          "format": {
            "enable": true
          },
          "validate": true,
          "completion": true,
          "keyOrdering": false
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        }
      }
    },
    "gopls": {
      "initialization_options": {
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": false,
          "compositeLiteralTypes": false,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  },
  "assistant": {
    "enabled": false,
    "version": "2",
    "button": false,
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o-mini"
    }
  },
  "language_models": {
    "openai": {
      "low_speed_timeout_in_seconds": 120,
      "version": "1",
      "available_models": [
        {
          "provider": "openai",
          "name": "gpt-4o-mini",
          "max_tokens": 128000
        }
      ]
    }
  }
}
